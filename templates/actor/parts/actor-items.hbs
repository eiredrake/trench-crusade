<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-header-left">{{ localize 'Name'}}</div>
    <div class="item-header-left">{{ localize (lookup @root.config.mySheetLabels "sdes") }}</div>
    <div class="item-header-right">{{ localize 'Use'}}</div>
  </li>
  {{#each gear as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        {{#if (eq item.type 'weapon') }}
          <a class='rollable' data-roll-type='weapon'>
        {{else}}            
          <a class='non-rollable' data-roll-type='item'>
        {{/if}}
            <img class="item-small-icon" src="{{item.img}}" title="{{item.name}}" />
            {{item.name}}
          </a>       
      </div>    
      <div class="item-short-description">
        {{ item.system.short_description }}
      </div>
      <div class="item-controls">
        {{#if (eq item.type 'weapon') }}
          <a class='item-control item-edit' title='{{localize "DOCUMENT.View" type='weapon'}}' >
            <i class='fas fa-eye'></i>
          </a>
          <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type='weapon'}}' >
            <i class='fas fa-edit'></i>
          </a>          
        {{else if (eq item.type 'armor') }}
          <a class='item-control item-edit' title='{{localize "DOCUMENT.View" type='armor'}}' >
            <i class='fas fa-eye'></i>
          </a>
          <a class='item-control item-edit' title='{{localize "DOCUMENT.edit" type='armor'}}' >
            <i class='fas fa-edit'></i>
          </a>          
        {{else if (eq item.type 'item')}}
          <a class='item-control item-edit' title='{{localize "DOCUMENT.View" type='item'}}' >
            <i class='fas fa-eye'></i>
          </a>
          <a class='item-control item-edit' title='{{localize "DOCUMENT.Edit" type='item'}}' >
            <i class='fas fa-edit'></i>
          </a>          
        {{/if}}

        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='feature'}}' >
          <i class='fas fa-trash'></i>
        </a>       
      </div>
    </li>
  {{/each}}
</ol>


