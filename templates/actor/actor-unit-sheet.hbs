<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
      <h2 class="faction">
        <div>
          <div>
            <select name="system.faction">
              {{ selectOptions factions selected=system.faction localize=true }}
            </select>
          </div>
          <div>
              {{formInput actor.system.schema.fields.keywords value=system.keywords options=keywords localize=true}}            
          </div>
        </div>
        <div>
          
          <label>
            {{ localize (lookup @root.config.mySheetLabels "requ") }}          
            {{ formInput actor.system.schema.fields.requiredUnit value=system.requiredUnit }}
          </label>
          
        </div>
      </h2>
      {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns.  --}}
      <div class="resources grid grid-3col">

        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}
        <div class="resource flex-group-center">
          <label for="system.blood.value" class="resource-label">{{ localize (lookup @root.config.mySheetLabels "blom") }}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.blood.value" value="{{system.blood.value}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.blessings.value" class="resource-label">Blessings</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.blessings.value" value="{{system.blessings.value}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <table>
            <thead>
              <tr>
                <th>Ducats</th>
                <th>Glory</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th><input type="text" name="system.cost.ducats" value="{{system.cost.ducats}}" data-dtype="Number"/></th>
                <th><input type="text" name="system.cost.glory" value="{{system.cost.glory}}" data-dtype="Number"/></th>
              </tr>
            </tbody>
          </table>
        </div>

      </div>
      <div class="abilities_table">
          <table>
            <thead>
              <tr>
                {{#each system.abilities as |ability key|}}
                  <th>
                    <label for="system.abilities.{{key}}.value" class="resource-label flexlarge align-left" data-label="{{localize (lookup @root.config.abilities key)}}">{{localize (lookup @root.config.abilities key)}}</label>                
                  </th>
                {{/each}}
              </tr>    
            </thead>
            <tbody>
              <tr>
                {{#each system.abilities as |ability key|}}
                  <td class="align-center ">
                    <input type="text" name="system.abilities.{{key}}.value" value="{{ability.value}}" data-dtype="Number"/>  
                  </td>
                {{/each}}
              </tr>          
            </tbody>
          </table>
      </div>

          {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
          use both the "grid" and "grid-Ncol" class where "N" can be any number
          from 1 to 12 and will create that number of columns.  --}}
          {{!-- <div class="abilities flexcol">
            {{#each system.abilities as |ability key|}}
            <div class="ability flexrow flex-group-center">
              <label for="system.abilities.{{key}}.value" class="resource-label flexlarge align-left" data-label="{{localize (lookup @root.config.abilities key)}}">{{localize (lookup @root.config.abilities key)}}</label>
              <input type="text" name="system.abilities.{{key}}.value" value="{{ability.value}}" data-dtype="Number"/>
            </div>
            {{/each}}
          </div> --}}
        </aside>      
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="features">Features</a>
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="items">Items</a>
    <a class="item" data-tab="spells">Spells</a>
    <a class="item" data-tab="effects">Effects</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Owned Features Tab --}}
    <div class="tab features" data-group="primary" data-tab="features">
      <section class="grid grid-3col">
        <aside class="sidebar">



        {{!-- For the main features list, span the right two columns --}}
        <section class="main grid-span-2">
          {{!-- This is a Handlebars partial. They're stored in the `/parts` folder next to this sheet, and defined in module/helpers/templates.mjs --}}
          {{> "systems/trench-crusade/templates/actor/parts/actor-features.hbs"}}
        </section>

      </section>
    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      {{!-- Editors must receive enriched text data from getData to properly handle rolls --}}
      {{editor enrichedBiography target="system.biography" engine="prosemirror" button=true editable=editable}}
    </div>

    {{!-- Owned Items Tab --}}
    <div class="tab items" data-group="primary" data-tab="items">
       {{> "systems/trench-crusade/templates/actor/parts/actor-items.hbs"}}
    </div>

    {{!-- Owned Spells Tab --}}
    <div class="tab spells" data-group="primary" data-tab="spells">
      {{> "systems/trench-crusade/templates/actor/parts/actor-spells.hbs"}}
    </div>

    {{!-- Active Effects Tab --}}
    <div class="tab effects flexcol" data-group="primary" data-tab="effects">
      {{> "systems/trench-crusade/templates/actor/parts/actor-effects.hbs"}}
    </div>

  </section>
</form>
