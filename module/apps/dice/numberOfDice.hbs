<div class="die-roller-window">
	<div class="flavor-header">{{ flavor }}</div>		
	<div class="dice-count-row">
		<h3><span aria-hidden="true">formula: </span>'{{ formula }}'</h3>
	</div>	
	<div slot="content" class="d6-incrementer">
		<div class="flexrow">
			<div>
				<button class="application-button" type="button" data-action="diceCountDelta" data-delta="1" > +1D </button>
				<button class="application-button" type="button" data-action="diceCountDelta" data-delta="-1"> -1D </button>
			</div>
			<div>
				<button class="application-button" type="button" data-action="diceBonusDelta" data-dicebonus="1" > +1 </button>
				<button class="application-button" type="button" data-action="diceBonusDelta" data-dicebonus="-1" >-1 </button>
			</div>
		</div>
	</div>
</div>